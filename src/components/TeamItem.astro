---
interface Props {
  name: string;
  position: string;
  image: string;
  description: string;
}

const { name, position, image, description } = Astro.props;
---

<div class="row">
  <div class="col-12 col-md-3 col-lg-2">
    <img class="d-block mx-md-auto mw-100" src={image} alt={name} />
  </div>
  <div class="col-12 col-md-9 col-lg-10">
    <h5 class="fw-bold">{name}</h5>
    <p class="fst-italic">{position}</p>
    <p set:html={description} />
  </div>
</div>
<hr />
