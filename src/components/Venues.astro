---
import skylightMain from "../assets/images/venues/skylight/main.jpg";
import manhattanClubMain from "../assets/images/venues/manhattan-club/main.jpg";
import taftBarMain from "../assets/images/venues/taft-bar/main.jpg";
import privateDiningRoomMain from "../assets/images/venues/private-dining-room/main.jpg";
import skylightFloorplans from "../assets/documents/floorplan-skylight.pdf";
import manhattanClubFloorplans from "../assets/documents/floorplan-manhattan-club.pdf";
import Venue from "./Venue.astro";
import { t } from "i18next";

const skylightGallery = (
  await Astro.glob("../assets/images/venues/skylight/*.jpg")
).map((image) => image.default);
const manhattanClubGallery = (
  await Astro.glob("../assets/images/venues/manhattan-club/*.jpg")
).map((image) => image.default);

const venues = [
  {
    id: 1,
    name: "Manhattan Manor",
    mainImage: skylightMain,
    // floorPlans: skylightFloorplans,
    video: "https://www.youtube.com/embed/zVe3RrmbNjw",
    gallery: skylightGallery,
    description: `
    <h4>${t("venues.size")}</h4>
    <ul>
      <li>2,520 ${t("venues.square-feet")} - 70 x 36 ${t("feet")}</li>
    </ul>
    <h4>${t("venues.capacity")}</h4>
    <ul>
      <li>150 Cocktail</li>
      <li>130 Seated</li>
      <li>110 Buffet</li>
      <li>160 Theater</li>
      <li>120 Theater with refreshments</li>
    </ul>
    `,
  },
  {
    id: 2,
    name: "Broadway Room",
    mainImage: manhattanClubMain,
    video: "https://www.youtube.com/embed/zVe3RrmbNjw",
    gallery: manhattanClubGallery,
    description: `
    <h4>${t("venues.size")}</h4>
    <ul>
      <li>960 ${t("venues.square-feet")} - 24 x 40 ${t("feet")}</li>
    </ul>
    <h4>${t("venues.capacity")}</h4>
    <ul>
      <li>100 Cocktail</li>
      <li>80 Seated</li>
      <li>70 Buffet</li>
      <li>100 Theater</li>
      <li>100 Theater with refreshments</li>
    </ul>
    `,
  },
  {
    id: 3,
    name: "Taft Bar",
    mainImage: taftBarMain,
    video: "https://www.youtube.com/embed/zVe3RrmbNjw",
    gallery: manhattanClubGallery,
    description: `
    <h4>${t("venues.size")}</h4>
    <ul>
      <li>480 ${t("venues.square-feet")} - 24 x 20 ${t("feet")}</li>
    </ul>
    <h4>${t("venues.capacity")}</h4>
    <ul>
      <li>40 Cocktail</li>
    </ul>
    `,
  },
  {
    id: 4,
    name: "Private Dining Room",
    mainImage: privateDiningRoomMain,
    video: "https://www.youtube.com/embed/zVe3RrmbNjw",
    gallery: manhattanClubGallery,
    description: `
    <h4>${t("venues.size")}</h4>
    <ul>
      <li>288 ${t("venues.square-feet")} - 24 x 12 ${t("feet")}</li>
    </ul>
    <h4>${t("venues.capacity")}</h4>
    <ul>
      <li>24 Long table</li>
      <li>45 Individual tables</li>
    </ul>
    `,
  },
];
---

<section class="container" id="venues-section">
  <h2 data-aos="fade-up">{t("venues")}</h2>
  <p data-aos="fade-up">
    {t("venues.description")}
  </p>

  <div class="row venues">
    {
      venues.map((venue) => (
        <div class="col-12 col-md-6 d-flex justify-content-center mb-md-5">
          <Venue {...venue} />
        </div>
      ))
    }
    <div class="col-12 col-md-6"></div>
  </div>
</section>

<style lang="scss">
  .container {
    margin-top: 60px;
    margin-bottom: 60px;
    text-align: center;
  }

  p {
    max-width: 900px;
    margin: 0 auto;
  }

  .venues {
    margin-top: 60px;
  }
</style>
