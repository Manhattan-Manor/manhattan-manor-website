---
import { t } from "i18next";
const nextYear = new Date().getFullYear() + 1;
---

<section class="container text-center mt-5" id="balldrop-section">
  <h2>
    {t("common.nye.party")}<br />
    {t("ball-drop.title")}<br />
    Times Square<br />
    New York City<br />
    {nextYear}
  </h2>
  <p>
    {t("ball-drop.description")}
    <br /><br />
    <a
      href="https://nye.manhattanmanor.com/"
      rel="noopener noreferrer"
      target="_blank">{t("ball-drop.nye-website-invite")}</a
    >
  </p>

  <h3>{t("ball-drop.video.title")}</h3>
  <iframe
    width="100%"
    height="500"
    src="https://www.youtube.com/embed/bfGkzDZWt-c"
    title="The history of the times square ball"
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
    allowfullscreen></iframe>

  <p class="mt-3 caption">{t("ball-drop.video.caption")}</p>
</section>

<style>
  .caption {
    font-size: 0.8rem;
    color: #6c757d;
  }
</style>
