---
import bannerVideo from "../assets/videos/banner-video.mp4";
import logo from "../assets/images/logo.svg";
import { t } from "i18next";
import { Image } from 'astro:assets';
---

<head>
  <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
</head>

<div class="video-background">
  <video autoplay loop muted id="background-video">
    <source src={bannerVideo} type="video/mp4" />
    Your browser does not support the video tag.
  </video>
</div>
<div class="banner-info">
  <Image
    src={logo}
    alt="Manhattan Manor Logo"
    width={114}
    height={180}
    loading="eager"
  />
  <h4>{t("common.slogan")}</h4>
  <a href="#who-we-are-section" class="bounce" aria-label="Scroll down">
    <i class="bi bi-chevron-down"></i>
  </a>

  <!-- <div class="d-flex justify-content-center mt-2 gap-4 flex-column flex-sm-row">
    <a
      class="btn btn-red px-4 py-3 text-uppercase"
      target="_blank"
      href="https://rosieogradys.com/Valentine2025.pdf"
    >
      {t("common.valentine-days-menu")}
    </a>
  </div> -->

</div>

<style lang="scss">
  .video-background {
    position: relative;
    width: 100%;
    overflow: hidden;
    height: 100vh;
  }

  .video-background video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw !important;
    height: 100vh;
    object-fit: cover;
    z-index: -1;
  }

  .banner-info {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: #fff;
  }

  .banner-info img {
    margin-bottom: 20px;
  }

  .bounce {
    display: block;
    color: white;
    font-size: 2rem;
    margin-top: 20px;
    animation: bounce 1.5s infinite;
    cursor: pointer;

    &:hover {
      color: #f5f5f5;
    }
  }

  @keyframes bounce {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(10px);
    }
    100% {
      transform: translateY(0);
    }
  }


  .btn-red {
    background-color: #ff0000d2;
    color: #fff;
    font-size: 0.7rem;
    font-family: 'Roboto', sans-serif;
    font-weight: 600;
    border: none;
    transition: all 0.3s ease-in-out;
    padding: 0.7rem 1.5rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
    
    &:hover {
      background-color: darken(#ff0000, 20%);
      color: #ffd;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.4);
      filter: brightness(1.2);

    }
  }

  .btn-pink {
  background: url("../assets/images/background-button-nyc-restaurant.png") no-repeat center center;
  background-size: cover;
    color: #000;
    font-size: 0.7rem;
    font-family: 'Roboto', sans-serif;
    font-weight: 600;
    border: none;
    transition: all 0.3s ease-in-out;
    padding: 0.7rem 1.5rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
    
    &:hover {
      filter: brightness(1.2);
      color: #000;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.4);
    }
}
</style>
