---
import Carousel from "./Carousel";
import { clients } from "../data/clients";
import { t } from "i18next";
---

<section class="container mt-5" id="clients-section">
  <h2 class="text-center mb-3" data-aos="fade-up">{t("clients")}</h2>

  <div class="row">
    <div class="col-12">
      <Carousel title="Clients Carousel" client:visible items={clients} />
    </div>
  </div>
</section>
