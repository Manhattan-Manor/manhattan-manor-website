---
import Navbar from "../components/Navbar.astro";
import favicon from "../assets/images/favicon.png?url";
import i18next from "i18next";
import { HeadHrefLangs } from "astro-i18next/components";
import logo from "../assets/images/logo-fullsize.png?url";
import { SEO } from "astro-seo";
import "../assets/styles/_global.scss";
import "../assets/styles/_colors.scss";
import "aos/dist/aos.css";
import "lightbox2/dist/css/lightbox.min.css";
import "@splidejs/splide/dist/css/splide.min.css";
import "animate.css";
import "bootstrap-icons/font/bootstrap-icons.css";
---

<!DOCTYPE html>
<html lang={i18next.language}>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Cache Policy -->
    <meta http-equiv="Cache-Control" content="max-age=604800" />
    <SEO
      title="Manhattan Manor"
      description="New York's premiere event space in Midtown & Times Square."
      openGraph={{
        basic: {
          title:
            "Manhattan Manor - New York's premiere event space in Midtown & Times Square.",
          type: "website",
          image: logo,
        },
      }}
      extend={{
        // extending the default link tags
        link: [{ rel: "icon", href: "/favicon.png" }],
        // extending the default meta tags
        meta: [
          {
            name: "twitter:image",
            content: logo,
          },
          { name: "twitter:title", content: "Manhattan Manor" },
          {
            name: "twitter:description",
            content: "New York's Most Central Venue",
          },
        ],
      }}
    />
    <HeadHrefLangs />
    <link
      rel="preload"
      href="/fonts/Roboto-Regular.ttf"
      as="font"
      crossorigin="anonymous"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
    <link rel="shortcut icon" href={favicon} type="image/x-icon" />
  </head>
  <body
    data-bs-spy="scroll"
    data-bs-target="#navbar"
    data-bs-offset="0"
    class="scrollspy-example"
    tabindex="0"
  >
    <Navbar />
    <slot />
    <script is:inline async src="https://www.google.com/recaptcha/api.js"
    ></script>
    <!-- <script defer src="bootstrap/dist/js/bootstrap.bundle.min.js"></script> -->
    <script>
      import AOS from "aos";

      // @ts-ignore
      AOS.init({
        duration: 1000,
      });
    </script>
    <script>
      // @ts-ignore
      import lightbox from "lightbox2/dist/js/lightbox-plus-jquery.min.js";

      lightbox.option({
        resizeDuration: 200,
        wrapAround: true,
      });
    </script>
  </body>
</html>
