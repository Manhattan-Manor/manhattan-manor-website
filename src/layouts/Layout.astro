---
import Navbar from "../components/Navbar.astro";
import favicon from "../assets/images/favicon.png";
import i18next from "i18next";
import { HeadHrefLangs } from "astro-i18next/components";
import "bootstrap-icons/font/bootstrap-icons.css";
import "../assets/styles/_global.scss";
import "../assets/styles/_colors.scss";
import "animate.css";
import "@splidejs/splide/dist/css/splide.min.css";
import logo from "../assets/images/logo-fullsize.png";
import { SEO } from "astro-seo";
---

<!DOCTYPE html>
<html lang={i18next.language}>
  <head>
    <SEO
      title="Manhattan Manor"
      description="New York's premiere event space in Midtown & Times Square."
      openGraph={{
        basic: {
          title:
            "Manhattan Manor - New York's premiere event space in Midtown & Times Square.",
          type: "website",
          image: logo.src,
        },
      }}
      extend={{
        // extending the default link tags
        link: [{ rel: "icon", href: "/favicon.png" }],
        // extending the default meta tags
        meta: [
          {
            name: "twitter:image",
            content: logo.src,
          },
          { name: "twitter:title", content: "Manhattan Manor" },
          {
            name: "twitter:description",
            content: "New York's Most Central Venue",
          },
        ],
      }}
    />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <HeadHrefLangs />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.4/css/lightbox.min.css"
      integrity="sha512-ZKX+BvQihRJPA8CROKBhDNvoc2aDMOdAlcm7TUQY+35XYtrd3yh95QOOhsPDQY9QnKE0Wqag9y38OIgEvb88cA=="
      crossorigin="anonymous"
      referrerPolicy="no-referrer"
    />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <link rel="shortcut icon" href={favicon} type="image/x-icon" />
  </head>
  <body>
    <Navbar />
    <slot />
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.4/js/lightbox-plus-jquery.min.js"
    ></script>
    <script is:inline src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
      // @ts-ignore
      lightbox.option({
        resizeDuration: 200,
        wrapAround: true,
      });

      // @ts-ignore
      AOS.init({
        duration: 1000,
      });
    </script>
  </body>
</html>
