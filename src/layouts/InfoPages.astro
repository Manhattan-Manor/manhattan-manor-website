---
import Footer from "../components/Footer.astro";
import favicon from "../assets/images/favicon.png?url";
import logo from "../assets/images/logo.svg";
import { Image } from 'astro:assets';
import { LanguageSelector } from "astro-i18next/components";
import "bootstrap-icons/font/bootstrap-icons.css";
import "../assets/styles/_global.scss";
import "../assets/styles/_colors.scss";
import i18next from "i18next";
import { localizePath } from "astro-i18next";
import SEO from "../components/SEO.astro";
import TagManagerHead from "../components/TagManager/TagManagerHead.astro";
import TagManagerBody from "../components/TagManager/TagManagerBody.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang={i18next.language}>
  <head>
    <TagManagerHead />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="shortcut icon" href={favicon} type="image/x-icon" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>Manhattan Manor - {title}</title>
    <SEO />
    <style>
      .content {
        min-height: 100vh;
        margin-top: 5rem;
        color: #a0a0a0 !important;
      }

      .navbar {
        background-color: rgba(0, 0, 0, 0.5);
      }

      .logo {
        width: 30px;
      }

      .language-selector {
        background: transparent;
        border: none;
        cursor: pointer;
        color: white;
        font-size: 14px;
        display: flex;
        align-items: center;
        text-transform: uppercase;
      }
    </style>
  </head>
  <body>
    <TagManagerBody />
    <nav class="navbar fixed-top" data-bs-theme="dark">
      <div class="container d-flex align-items-center">
        <a class="navbar-brand" href={localizePath("/")}>
          <Image
            src={logo}
            alt="Logo"
            class="d-inline-block align-text-top logo"
            width={30}
            height={45}
            format="webp"
          />
        </a>
        <LanguageSelector class="language-selector" title="Language Selector" />
      </div>
    </nav>
    <div class="container content">
      <slot />
    </div>

    <Footer />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
